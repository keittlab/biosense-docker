[Unit]
Description=BME280 Sensor Data Recorder
RequiresMountsFor=/home/biosense/datastore
After=local-fs.target location-check.service

[Service]
EnvironmentFile=/etc/profile.d/geolocation.sh
WorkingDirectory=/home/biosense/biosense_venv
ExecStart=/home/biosense/biosense_venv/bin/python /usr/local/bin/read-bme280
Restart=on-failure
RestartSec=300
User=biosense

[Install]
WantedBy=multi-user.target
